generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DB_URL")
}

model Appointment {
  id        String            @id @default(cuid())
  date      DateTime
  status    AppointmentStatus @default(PENDING)
  clientId  String
  barberId  String
  createdAt DateTime          @default(now())
  updatedAt DateTime          @default(now())
  barber    User              @relation("barberAppointments", fields: [barberId], references: [id])
  client    User              @relation("clientAppointments", fields: [clientId], references: [id])
}

model User {
  id                   String        @id @default(cuid())
  email                String        @unique
  password             String
  role                 Role          @default(CLIENT)
  createdAt            DateTime      @default(now())
  name                 String        @default("Desconocido")
  appointmentsAsBarber Appointment[] @relation("barberAppointments")
  appointmentsAsClient Appointment[] @relation("clientAppointments")

  services Service[] @relation("UserServices")
}


model Service {
  id        String    @id @default(cuid())
  name      String    @unique
  price     Int
  createdAt DateTime  @default(now())

  barbers   User[]    @relation("UserServices")
}

enum Role {
  CLIENT
  BARBER
  ADMIN
}

enum AppointmentStatus {
  PENDING
  CONFIRMED
  CANCELLED
}
